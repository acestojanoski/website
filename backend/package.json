{
	"name": "@acestojanoski/backend",
	"version": "0.1.0",
	"main": ".build/standalone.js",
	"private": true,
	"files": [
		"src"
	],
	"scripts": {
		"build": "rimraf .build && tsc",
		"build:watch": "tsc --watch",
		"start": "micro -l tcp://localhost:3001",
		"start:watch": "nodemon --exec \"yarn start\" --watch .build",
		"dev": "yarn build && concurrently \"yarn build:watch\" \"yarn start:watch\"",
		"lint": "eslint **/**.ts"
	},
	"dependencies": {
		"@octokit/graphql": "^5.0.1",
		"@octokit/graphql-schema": "^12.11.0",
		"dotenv": "^16.0.3",
		"micro": "^10.0.1",
		"micro-handlers": "^0.1.1"
	},
	"devDependencies": {
		"@acestojanoski/tsconfig": "*",
		"@types/node": "18.8.3",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"concurrently": "^7.6.0",
		"eslint": "8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"typescript": "4.8.4"
	}
}
